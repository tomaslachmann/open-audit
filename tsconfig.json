{
  "compilerOptions": {
    "target": "ES2020",             // modern JS target
    "module": "CommonJS",           // Node.js module system
    "outDir": "./dist",             // compiled JS output folder
    "rootDir": "./src",             // your TS source code folder
    "strict": true,                 // enable all strict type checks
    "esModuleInterop": true,        // import compatibility
    "skipLibCheck": true            // skip type checks on libs
  }
}
